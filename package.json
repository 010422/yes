{
  "name": "YesPlayMusic",
  "version": "0.4.9",
  "description": "YesPlayMusic: A modern desktop music player for NetEase Cloud Music.",
  "main": "dist/electron/main.js",
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.yourcompany.yesplaymusic",
    "mac": {
      "target": "dmg",  
      "arch": ["x64"],  
      "category": "public.app-category.music",  
      "icon": "build/icons/icon.icns",  
      "dmg": {
        "background": "build/dmg-background.png",  
        "window": {
          "width": 600,
          "height": 400
        }
      }
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder", 
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^24.0.0",  
    "electron-builder": "^24.0.0" 
  },
  "dependencies": {
  }
}
