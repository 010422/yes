{
  "name": "YesPlayMusic",
  "version": "0.4.9",
  "description": "YesPlayMusic: A modern desktop music player for NetEase Cloud Music.",
  "main": "dist/electron/main.js",
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.yourcompany.yesplaymusic",
    "mac": {
      "target": "dmg",  // 打包为 dmg 格式
      "arch": ["x64"],  // 只打包 macOS 英特尔版本
      "category": "public.app-category.music",  // 指定应用分类
      "icon": "build/icons/icon.icns",  // 指定 macOS 图标
      "dmg": {
        "background": "build/dmg-background.png",  // DMG 安装包的背景图
        "window": {
          "width": 600,
          "height": 400
        }
      }
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",  // 用于打包应用
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^24.0.0",  // 使用适当版本的 Electron
    "electron-builder": "^24.0.0"  // 使用 electron-builder 来打包应用
  },
  "dependencies": {
    // 你的项目依赖
  }
}
